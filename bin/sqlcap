#!/usr/bin/env bash
# The script capitalizes every preserved word in `sql`.
# `${k^^}` syntax below to capitalize words.

CMDS=('show' 'where' 'alter' 'select' 'create' 'update' 'delete' 'from' 'insert' 'distinct' 'set' 'convert' 'collate' 'database' 'table' 'exists' 'grant' 'grants' 'join' 'inner' 'outer' 'right outer' 'left outer' 'user' 'default' 'use' 'privileges')
AGGREGATE=('sum' 'avg' 'case' 'count' 'limit' 'min' 'max' 'having' 'delimiter' 'begin' 'end' 'procedure' 'after' 'before' 'old' 'new')
GROUPING=('for' 'all' 'in' 'on' 'as' 'is' 'identified by' 'group by' 'order by' 'with' 'and' 'or' 'to' 'not' 'if' 'else' 'desc' 'asc'  'varchar' 'union' 'minus')
CONSTRAINTS=('constraint' 'unique' 'null' 'primary key' 'foreign key' 'enum' 'references' 'auto_increment' 'trigger' 'procedure' 'into' 'values' 'then')
DATATYPES=('character' 'int' 'drop')
# concatenate the arrays
LIST=("${CMDS[@]}" "${AGGREGATE[@]}" "${GROUPING[@]}" "${CONSTRAINTS[@]}" "${DATATYPES[@]}")

if (("$#" == 0)); then
	echo -e "${COLOR_LIGHT_RED}No file provided!${RESET}"
	exit 1
fi

# by default iterates through arguments
for f; do
	if [ ! -e "$f" ]; then
		echo -e "${COLOR_YELLOW}<$f>${RESET} ${COLOR_LIGHT_RED}file doesn't exists!${RESET}"
		continue
	fi

	# check for file extension
	echo "$f" | grep -qE 'sql$'
	exit_status="$?"

	if (("$exit_status" != 0)); then
		echo -e "${COLOR_LIGHT_RED}file name must end with ${COLOR_YELLOW}.sql${RESET}${RESET}"
		exit 1
	fi

	for k in "${LIST[@]}"; do
		sed -i "s@\b$k\b@${k^^}@g" "$f"
	done
done
